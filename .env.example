FLASK_APP=app
FLASK_ENV=production
DATABASE_URL=sqlite:///scim.db
SECRET_KEY=your-secret-key
JWT_SECRET_KEY=your-jwt-secret-key-here
BASIC_AUTH_USERNAME=your-scim-client-id
BASIC_AUTH_PASSWORD=your-scim-api-token
LOG_LEVEL=INFO
ALLOWED_ORIGINS=https://your-okta-domain.okta.com

# Application settings
APP_SECRET_KEY=your-secret-key-here
BASE_URL=http://localhost:5000
PORT=5000

# Session Security Settings
SESSION_COOKIE_SECURE=False  # Set to True in production

# Identity Provider Selection
IDP_PROVIDER=auth0  # Options: auth0, okta

# Auth0 Settings (required if IDP_PROVIDER=auth0)
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_DOMAIN=your-domain.auth0.com

# Okta Settings (required if IDP_PROVIDER=okta)
OKTA_CLIENT_ID=your-okta-client-id
OKTA_CLIENT_SECRET=your-okta-client-secret
OKTA_DOMAIN=your-okta-domain.okta.com
OKTA_ISSUER=https://your-okta-domain.okta.com 